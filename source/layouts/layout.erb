<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= data.page.title || "The Middleman" %></title>
    
    <%= stylesheet_link_tag "normalize" %>
    <%= stylesheet_link_tag "//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" %>
    <%= stylesheet_link_tag "all" %>
  </head>
  
  <body class="<%= page_classes %>">
    
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="/">Find Pie</a>
          <a id="info" href="/info.html"><i id="info-button" class="icon-info-sign"></i></a>
        </div>
      </div>
    </div>

    <%= yield %>
    
    <%= javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.2/jquery.min.js" %>
    <%= javascript_include_tag "all" %>
  </body>
</html>